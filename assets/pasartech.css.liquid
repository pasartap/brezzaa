/*
 * PasarTap CSS customization
 */


/*  Header  */

#header {
    background-image: none !important;
}

.header-top {
    display: none;
}

#logo {
    margin: 18px 0;
}

#search-field,
.search-btn-bg,
.mgk-top-cart .wishlist a,
#cartToggle {
    border-radius: 6px;
    border: 2px solid #e0e0e0;
    height: 44px;
}

.mgk-top-cart .wishlist a {
    color: #60be74;
}

.wishlist {
    float: right;
    margin-right: 10px;
}

.search-btn-bg {
    border-left: 1px #f1f1f1 solid !important;
    border-top-left-radius: 0px !important;
    border-bottom-left-radius: 0px !important;
}

.sticky-header {
    margin-top: 50px !important;
    top: 0px !important;
}

.sticky-topbar {
    position: fixed;
    height: 50px;
    z-index: 1000;
    display: block;
    top: 0px;
    background: #60be74;
    width: 100%;
    transition: all 0.5s;
    border-bottom: 3px solid #60be74;
}



/*  Homepage  */

.featured-pro .block-title {
    border-bottom: none;
}

.featured-pro .owl-theme .owl-controls {
    right: -6.5%;
    top: 25%;
}

@media only screen and (min-width: 978px) and (max-width:1259px) {
    .featured-pro .owl-theme .owl-controls {
        right: -8.5%;
        top: 32%;
    }
}



/* Footer */

#bottom .social-links h3 {
    margin-top: 15px;
}

#footer .social-links ul {
    margin-top: 7px;
}