/*
 * PasarTap CSS customization
 */


/*  Header  */

#header {
    background-image: none !important;
}



/*
.header-top {
    display: none;
}
*/

.site-nav::before,
.top-nav::before,
.site-nav::after {
    display: none !important;
}

@media only screen and (max-width:767px) {
    .header-top,
    #top-bar,
    #sticky-topbar {
        display: none !important;
    }
}

.site-nav-dropdown {
    overflow-y: scroll;
    max-height: 500px;
}


/* mmenu */

@media(min-width: 601px) {
    .mh-head {
        display: none;
    }
}

.mh-head {
    background-color: #60be74;
}

#sticky-mmenu {
    position: fixed;
    width: 100%;
    top: 0;
}

nav#sticky-menu:not( .mm-menu),
nav#sticky-cart:not( .mm-menu) {
    display: none;
}

@media (min-width: 960px) {
    #sticky-mmenu {
        display: none;
    }
}

.mh-head .mh-btns-right {
    right: 0px;
}

.mm-navbars-top {

    border : none;
    top: 0;
    height: 80px;
}

.mm-hasnavbar-top-1 .mm-panels {
    top: 80px;
}

.mm-menu {
    font-family: "Open Sans",sans-serif;
}

@media only screen and (min-width: 0px) and (max-width: 479px) {
    #magik-slideshow {
        margin-top: 50px;
    }
}

#logo {
    margin-bottom: 0px;
    margin-top: 22px;
}

#search-field,
.search-btn-bg,
.mgk-top-cart .wishlist a,
#cartToggle {
    border-radius: 6px;
    border: 2px solid #e0e0e0;
    height: 44px;
}

.mgk-top-cart .wishlist a {
    color: #60be74;
}

.wishlist {
    float: right;
    margin-right: 10px;
}

.search-btn-bg {
    border-left: 1px #f1f1f1 solid !important;
    border-top-left-radius: 0px !important;
    border-bottom-left-radius: 0px !important;
}

.search-section {
    margin-left: 15px;
}

.sticky-header {
    margin-top: 68px !important;
    top: 0px !important;
}

.sticky-topbar {
    position: fixed;
    height: 70px;
    z-index: 1000;
    display: block;
    top: 0px;
    background: #60be74;
    width: 100%;
    transition: all 0.5s;
    border-bottom: 3px solid #60be74;
}

.sticky-user {
    margin-right: 170px;
}

.site-nav {
    text-align: center;
}

.top-nav::before {
    width: 0;
    height: 0;
    border-right: 25px solid #60be74;
    border-top: 27px solid transparent;
    border-bottom: 27px solid transparent;
    content: "";
    position: absolute;
    margin-left: -24px;
}

.site-nav>li:first-child>a>span {
    color: yellow;
}

.site-nav-dropdown .col-1 {
    width: 100%;
}

.top-cart-contain.sticky-topcart {
    top: 25px;
}

#mob-menu {
    margin: 0px;
    position: fixed;
    top: 0;
}



/* Cart */

#dropdown-cart {
    top: 42px;
    width: 400px;
    border-radius: 6px;
    border: 2px solid #e0e0e0;
    padding: 0;
}



/*  Homepage  */


/* Owl Carousel */

.sca-qv-button {
    width: 120px !important;
}





/* Widget bestsellers */

.bestsell-pro .block-content {
    padding: 0px;
}





/* Meal-Kits */

.featured-pro .block-title {
    border-bottom: none;
}

.featured-pro .owl-theme .owl-controls {
    right: -6.5%;
    top: 25%;
}

@media only screen and (min-width: 978px) and (max-width:1259px) {
    .featured-pro .owl-theme .owl-controls {
        right: -8.5%;
        top: 32%;
    }

    .tile_search input {
        width: 355px;
    }
}




/* Footer */

#bottom .social-links h3 {
    margin-top: 15px;
}

#footer .social-links ul {
    margin-top: 7px;
}



/* Collections page */

.section-header {
    margin-top: 15px;
}



