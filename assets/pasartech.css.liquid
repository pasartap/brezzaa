/*
 * PasarTap CSS customization
 */


/*	Header 	*/

#header {
    background-image: none !important;
}

.header-top {
    display: none;
}

#logo {
    margin: 18px 0;
}

#search-field,
.search-btn-bg,
.mgk-top-cart .wishlist a,
#cartToggle {
    border-radius: 6px;
    border: 2px solid #e0e0e0;
    height: 44px;
}

.mgk-top-cart .wishlist a {
    color: #60be74;
}

.wishlist {
    float: right;
    margin-right: 10px;
}

.search-btn-bg {
    border-left: 1px #f1f1f1 solid !important;
    border-top-left-radius: 0px !important;
    border-bottom-left-radius: 0px !important;
}

.sticky-header {
    margin-top: 50px !important;
}

.sticky-topbar {
    position: fixed;
    height: 50px;
    z-index: 1000;
    display: block;
    top: 0px;
    background: #60be74;
    width: 100%;
    transition: all 0.5s;
    border-bottom: 3px solid #60be74;
}