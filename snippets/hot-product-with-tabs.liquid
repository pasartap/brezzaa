{% assign listing_cols = '1' %}
{% assign image_size = 'original' %}

{% if settings.display_hot_products_with_tabs == true %}
<div class="container">
  <div class="row"> 
  
    <!-- Start Hot Product Widget -->
    <div class="col-md-3 col-xs-12 hot-deal">
      <div class="widget widget__hot-product">  
        <div class="widget_header">
        </div>
        <div class="widget_content">
          <div class="product-listing product-listing__hot-product">
          <!-- Item -->
          {% assign handle = settings.hot-product_cat %}
          {% assign product = all_products[handle] %}
          {% assign date_now = 'now' | date:'%Y/%m/%d' %}      
            
            <div class="item">
              <div class="hot-label hot-top-left">Hot</div>
              {% include 'product-grid-item' with 'listing_cols' with 'image_size' %}     
              {% if settings.start_date != blank and settings.end_date != blank  %}
                <div class="box-timer">
                  <div class="timer-grid countbox_1" data-time="{{ settings.end_date }}">
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- End Hot Product Widget -->

    <!-- Start Tab Section Widget -->
    <div id="home-tab-section">    
      <div class="home-tab col-md-9 column col-xs-12">
        <div class="category-product">
          <ul class="nav home-nav-tabs home-product-tabs">
            <li> <div class="new_title center"> <h2><strong>{{ settings.home-tabs-title }}</h2> </strong></div> </li>  

            {% if settings.tab-1-header != blank %}
              <li class="active"><a href="#home-tab-1" data-toggle="tab" aria-expanded="false">{{ settings.tab-1-header }}</a></li> 
            {% endif %}

            {% if settings.tab-2-header != blank %}
              <li class=""> <a href="#home-tab-2" data-toggle="tab" aria-expanded="false">{{ settings.tab-2-header }}</a> </li>
            {% endif %}

            {% if settings.tab-3-header != blank %}
              <li class=""> <a href="#home-tab-3" data-toggle="tab" aria-expanded="false">{{ settings.tab-3-header }}</a> </li>
            {% endif %}

            {% if settings.tab-4-header != blank %}
              <li class=""> <a href="#home-tab-4" data-toggle="tab" aria-expanded="false">{{ settings.tab-4-header }}</a> </li>
            {% endif %}                  
            
          </ul>
          <div id="productTabContent" class="tab-content">
            <div class="tab-pane fade active in" id="home-tab-1">
              <div class="best-seller-pro">
                {% include 'widget-home-category1' %}
              </div>
            </div>
            <div class="tab-pane fade" id="home-tab-2">
              <div class="new-arrivals-products-pro">
                {% include 'widget-home-category2' %}   
              </div>
            </div>       
            <div class="tab-pane fade" id="home-tab-3">
              <div class="featured-products-pro">
                {% include 'widget-home-category3' %}   
              </div>
            </div>
            <div class="tab-pane fade" id="home-tab-4">
              <div class="featured-products-pro">
                {% include 'widget-home-category4' %}   
             </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- End Tab Section Widget -->
  </div>
</div>
{% endif %}

<script type="text/javascript">
 //countdown js filter
jQuery('.timer-grid').each(function(){
    var countTime=jQuery(this).attr('data-time');jQuery(this).countdown(countTime,function(event){jQuery(this).html('{% if settings.display_discount_box == true %}<div id="box-discount" class="day box-time-date"><span class="number">{{ settings.hot_product_discount }}%</span>OFF!</div>{% endif %}<div class="day box-time-date"><span class="number">'+event.strftime('%D')+' </span>days</div> <div class="hour box-time-date"><span class="number">'+event.strftime('%H')+'</span>Hrs</div><div class="min box-time-date"><span class="number">'+event.strftime('%M')+'</span> MINS</div> <div class="sec box-time-date"><span class="number">'+event.strftime('%S')+' </span>SEC</div>');});
});

jQuery(document).ready(function() {
	
	jQuery(".tab_content_best-seller").hide();
	jQuery(".tab_content_best-seller:first").show(); 

	jQuery("ul.tabs-best-seller li").click(function() {
		jQuery("ul.tabs-best-seller li").removeClass("active");
		jQuery(this).addClass("active");
		jQuery(".tab_content_best-seller").hide();
		var activeTab = $jq(this).attr("rel"); 
		jQuery("#"+activeTab).fadeIn(); 
	});
});
</script>

